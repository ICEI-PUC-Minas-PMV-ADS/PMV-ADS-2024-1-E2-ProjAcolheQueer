@model IEnumerable<Instituicao>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
</head>

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        background-color: #FFFAEB;
    }

    h1, h4, th, td, .btn {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
    }

    .custom-btn {
        background: linear-gradient(to right, #FFB655, #FF637D);
        border: none;
        border-radius: 50px;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        transition: background 0.3s ease;
    }

        .custom-btn:hover {
            background: linear-gradient(to right, #FF637D, #FFB655);
        }
</style>

<h1>Instituições</h1>

<p>
    <a asp-action="Create" class="btn custom-btn">Cadastre uma Instituição</a>
</p>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().cnpj)</th>
                <th>@Html.DisplayNameFor(model => model.First().email)</th>
                <th>@Html.DisplayNameFor(model => model.First().telefone)</th>
                <th>@Html.DisplayNameFor(model => model.First().pix_doacao)</th>
                <th>@Html.DisplayNameFor(model => model.First().n_vagas)</th>
                <th>@Html.DisplayNameFor(model => model.First().qtd_disponibilidade)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.cnpj)</td>
                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                    <td>@Html.DisplayFor(modelItem => item.telefone)</td>
                    <td>@Html.DisplayFor(modelItem => item.pix_doacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.n_vagas)</td>
                    <td>@Html.DisplayFor(modelItem => item.qtd_disponibilidade)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.instituicao_id" class="btn custom-btn">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.instituicao_id" class="btn custom-btn">Visualizar</a> |
                        <a asp-action="Delete" asp-route-id="@item.instituicao_id" class="btn custom-btn">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
