@model IEnumerable<acolhequeer_app.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro</h1>

<p>
    <a asp-action="Create">Cadastrar um novo usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_social)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bool_admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_social)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bool_admin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Usuario_id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Usuario_id">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.Usuario_id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
